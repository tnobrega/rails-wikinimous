<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <article>
        <h1><%= @article.title %></h1>
        <p><%= @source.html_safe %></p>
        <%= link_to "Delete", article_path(@article),
          method: :delete,
          data: { confirm: "Are you sure?" } %> |
          <%= link_to "Back", articles_path %> |
          <%= link_to "Update", edit_article_path(@article) %>
      </article>
    </div>
  </div>
</div>
